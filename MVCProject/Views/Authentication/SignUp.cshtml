@model UserModel
<form method="POST" asp-action="SignUp" asp-controller="Authentication">
    <div class="mb-3 d-none">
        <label asp-for="Id"></label>
        <input class="form-control" asp-for="Id" />
        <span asp-validation-for="Id" class="text-danger" />
    </div>
    <div class="mb-3">
        <label asp-for="Surname"></label>
        <input class="form-control" asp-for="Surname" />
        <span asp-validation-for="Surname" class="text-danger" />
    </div>
    <div class="mb-3">
        <label asp-for="FirstName"></label>
        <input class="form-control" asp-for="FirstName" />
        <span asp-validation-for="FirstName" class="text-danger" />
    </div>
    <div class="mb-3">
        <label asp-for="Email"></label>
        <input class="form-control" asp-for="Email" />
        <span asp-validation-for="Email" class="text-danger" />
    </div>
    <div class="mb-3">
        <label asp-for="DateOfBirth"></label>
        <input class="form-control" asp-for="DateOfBirth" />
        <span asp-validation-for="DateOfBirth" class="text-danger" />
    </div>
    <div class="mb-3">
        <label asp-for="Gender"></label>
        <select class="form-control" asp-for="Gender" asp-items="@Html.GetEnumSelectList<GenderEnum>()"></select>
        <span asp-validation-for="Gender" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label asp-for="Login"></label>
        <input class="form-control" asp-for="Login" />
        <span asp-validation-for="Login" class="text-danger" />
    </div>
    <div class="mb-3">
        <label asp-for="Password"></label>
        <input class="form-control" asp-for="Password" />
        <span asp-validation-for="Password" class="text-danger" />
    </div>

    <div class="mb-3">
        <button class="btn-primary" type="submit">Zapisz</button>
    </div>
</form>
