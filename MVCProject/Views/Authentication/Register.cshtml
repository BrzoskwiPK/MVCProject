@using MVCProject.ViewModels
@model RegisterViewModel

@{
    ViewData["Title"] = "Register";
}

<div class="authenticationForm">
    <div class="authenticationFormLeft"></div>
    <div class="authenticationFormRight form-group">
        <h1 class="mb-5">Become our member</h1>
        @if (TempData["Error"] != null)
        {
            <div class="col-md-12 alert alert-danger">
                <span><b>Sorry!</b> - @TempData["Error"]</span>
            </div>
        }
        <form method="POST" asp-action="Register" asp-controller="Authentication" class="w-60">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="mb-2 form-floating">
                <input class="form-control" type="text" asp-for="@Model.FirstName" placeholder="Enter your first name" />
                <label asp-for="@Model.FirstName" class="form-label"></label>
                <span asp-validation-for="@Model.FirstName" class="text-danger" />
            </div>
            <div class="mb-2 form-floating">
                <input class="form-control" type="text" asp-for="@Model.LastName" placeholder="Enter your last name" />
                <label asp-for="@Model.LastName" class="form-label"></label>
                <span asp-validation-for="@Model.LastName" class="text-danger" />
            </div>
            <div class="mb-2 form-floating">
                <input type="email" class="form-control" aria-describedby="emailHelp" placeholder="name@example.com" asp-for="@Model.EmailAddress" />
                <label asp-for="@Model.EmailAddress" class="form-label"></label>
                <span asp-validation-for="@Model.EmailAddress" class="text-danger" />
            </div>
            <div class="mb-2 form-floating">
                <input class="form-control" type="date" asp-for="@Model.DateOfBirth" placeholder="Date of birth" min="1923-01-01" max="2013-01-01"/>
                <label asp-for="@Model.DateOfBirth" class="form-label"></label>
                <span asp-validation-for="@Model.DateOfBirth" class="text-danger" />
            </div>
            <div class="mb-2 form-floating form-group">
                <select class="form-select" asp-for="@Model.Gender" placeholder="Gender">
                    <option value="Male">Male</option>
                    <option value="Female">Female</option>
                </select>
                <label asp-for="@Model.Gender" class="form-label"></label>
                <span asp-validation-for="@Model.Gender" class="text-danger"></span>
            </div>
            <div class="mb-2 form-floating">
                <input class="form-control" type="password" placeholder="Password" asp-for="@Model.Password" />
                <label asp-for="@Model.Password" class="form-label"></label>
                <span asp-validation-for="@Model.Password" class="text-danger" />
            </div>
            <div class="mb-2 form-floating">
                <input class="form-control" type="password" placeholder="Confirm password" asp-for="@Model.ConfirmPassword" />
                <label asp-for="@Model.ConfirmPassword" class="form-label"></label>
                <span asp-validation-for="@Model.ConfirmPassword" class="text-danger" />
            </div>
            <div class="mt-3">
                <button class="btn btn-primary" type="submit">Create account!</button>
            </div>
        </form>
    </div>
</div>

<script>
    const dateControl = document.querySelector('input[type="date"]');
    const todayDate = new Date(Date.now()).toISOString().slice(0, 10);
    dateControl.value = todayDate;
    dateControl.max = todayDate;
</script>