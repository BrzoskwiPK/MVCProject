@using MVCProject.Models
@model LoginViewModel

@{
    ViewData["Title"] = "Login";
}

<div class="authenticationForm">
    <div class="authenticationFormLeft"></div>
    <div class="authenticationFormRight form-group">
        <h1 class="mb-5">Welcome back</h1>
        @if (TempData["Error"] != null)
        {
            <div class="col-md-12 alert alert-danger">
                <span><b>Sorry!</b> - @TempData["Error"]</span>
            </div>
        }
        <form autocomplete="off" method="POST" asp-action="Login" asp-controller="Authentication" class="w-60">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="mb-2 form-floating">
                <input class="form-control" type="text" asp-for="@Model.EmailAddress" placeholder="Email" />
                <label asp-for="@Model.EmailAddress" class="form-label"></label>
                <span asp-validation-for="@Model.EmailAddress" class="text-danger" />
            </div>
            <div class="mb-2 form-floating">
                <input class="form-control" type="password" placeholder="Password" asp-for="@Model.Password" />
                <label asp-for="@Model.Password" class="form-label"></label>
                <span asp-validation-for="@Model.Password" class="text-danger" />
            </div>
            <div class="mb-2 form-check d-flex align-items-center justify-content-center">
                <input type="checkbox" asp-for="@Model.RememberMe" class="form-check-input m-2" />
                <label class="form-check-label" asp-for="@Model.RememberMe">Remember Me</label>
            </div>
            <div class="mt-3">
                <button class="btn btn-primary" type="submit">Login</button>
            </div>
        </form>

        <p class="mt-5">You are not our user yet? No worries, just <a class="card-link" asp-action="Register" asp-controller="Authentication">register now</a>!</p>
    </div>
</div>