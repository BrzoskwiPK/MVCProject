@model UserViewModel

@{
    ViewData["Title"] = "Dashboard";
}
<div class="d-flex flex-row align-items-center justify-content-center w-100 h-100 mb-auto">
    @if (TempData["Error"] != null)
    {
        <div class="col-md-12 alert alert-danger">
            <span><b>Sorry!</b> - @TempData["Error"]</span>
        </div>
    }

    <form method="post" asp-action="EditUser">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="mb-2 form-floating">
            <input class="form-control" type="text" asp-for="@Model.FirstName" placeholder="Enter your first name" />
            <label asp-for="@Model.FirstName" class="form-label"></label>
            <span asp-validation-for="@Model.FirstName" class="text-danger" />
        </div>
        <div class="mb-2 form-floating">
            <input class="form-control" type="text" asp-for="@Model.LastName" placeholder="Enter your last name" />
            <label asp-for="@Model.LastName" class="form-label"></label>
            <span asp-validation-for="@Model.LastName" class="text-danger" />
        </div>
        <div class="mb-2 form-floating">
            <input class="form-control" type="date" asp-for="@Model.DateOfBirth" placeholder="Date of birth" />
            <label asp-for="@Model.DateOfBirth" class="form-label"></label>
            <span asp-validation-for="@Model.DateOfBirth" class="text-danger" />
        </div>
        <div class="mb-2 form-floating form-group">
            <select class="form-select" asp-for="@Model.Gender" placeholder="Gender">
                <option value="Male">Male</option>
                <option value="Female">Female</option>
            </select>
            <label asp-for="@Model.Gender" class="form-label"></label>
            <span asp-validation-for="@Model.Gender" class="text-danger"></span>
        </div>
        <div class="mt-3">
            <button class="btn btn-primary" type="submit">Change your personal data</button>
        </div>
    </form>
</div>

